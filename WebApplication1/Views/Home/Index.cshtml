@model WebApplication1.Models.BagOfData

@{
    ViewData["Title"] = "Home Page";
    List<User> all_users = Model.GetData("DataFromAPI");
    User current_user = all_users.FirstOrDefault();
}

<div class="text-center flex flex-row">  

    <div class="user-information-table d-flex flex-row">
        <div class="d-flex flex-column">
            <p class="mr-5 text-right">User ID</p>
            <p class="mr-5 text-right">User Email</p>
        </div>
        <div class="d-flex flex-column">
            <p class="mr-5">@current_user.id</p>
            <p class="mr-5">@current_user.email</p>
        </div>
    </div>
          
       
        
        <p>Expense description</p>
        <p>Expense amount</p>

 

    @foreach (var expense in @current_user.expenses)
    {
            <td>@expense.description</td>
            <td>@expense.amount</td>
    }
    <form class="add-expense-form" method="post" asp-controller="Home" asp-action="Create">
        <input type="hidden" name="user_api_id" value="@current_user.id"/>
        <input type="text" name="description" value="Text"/>
        <input type="number" name="amount" value="123"/>
        <input type="submit" value="Add new expense" />
    </form>
</div>
